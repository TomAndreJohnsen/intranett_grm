# Flask Configuration
# KRITISK: Generer en ny, sterk hemmelig n√∏kkel
# Bruk: python -c "import secrets; print(secrets.token_hex(32))"
FLASK_SECRET_KEY=your-very-long-random-secret-key-change-this-in-production

# Microsoft Entra ID Configuration
# VIKTIG: Lag nye secrets i Azure etter historikk-rensing
# Get these values from your Azure App Registration
MS_CLIENT_ID=CHANGE_ME
MS_CLIENT_SECRET=CHANGE_ME
MS_TENANT_ID=CHANGE_ME

# Application Configuration
# Change this to your production URL when deploying
APP_BASE_URL=http://localhost:5000

# Admin Users
# Comma-separated list of UPNs (User Principal Names) that should have admin privileges
# Example: admin@company.com,manager@company.com
ADMIN_UPNS=CHANGE_ME

# Session Configuration
# Options: 'filesystem' (development) or 'redis' (production)
SESSION_TYPE=filesystem # USE "redis" IN PRODUCTION

# Redis Configuration (only needed if SESSION_TYPE=redis)
REDIS_URL= # e.g. redis://localhost:6379/0
